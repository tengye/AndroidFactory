    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teng.androidfactory.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <Button
            android:onClick="retrofitAndRx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="retrofit And rxJava"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="exoPlayer"
            android:text="Google Player"
